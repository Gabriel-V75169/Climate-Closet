<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="col-md-6">
    <h2>Customize Profile</h2>

    <form class="form customize-form">
      <div class="form-group">
        <label for="location">Location:</label>
        <input class="form-input" type="text" id="location" />
      </div>
      <div class="form-group">
        <label for="gender">Gender:</label>
        <input class="form-input" type="text" id="gender" />
      </div>
      <div class="form-group">
        <label for="style">Style:</label>
        <input class="form-input" type="text" id="style" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>

  
   <div class="search-list">
     <h3>{{name}}'s Previous Searches</h3>
     <p></p>
      {{#each Customize as |location|}}
      <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/customize/{{customize.id}}">{{location}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{customize.id}}">DELETE</button>
     </div>
     </div>
      {{/each}}
     </div>
 </div>

<script src="./js/profile.js"></script>
