<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="col-md-6 ">
  <div class="container2">
    <h2>Customize Profile</h2>
    <form class="form customize-form">
      <div class="form-group">
        <label for="gender">gender:</label>
        <select name="gender-options" id="gender">
          <option value ="male">male</option>
          <option value ="female">female</option>
          <option value ="other">other</option>
          </select>
      </div>
  
      <div class="form-group">
        <label for="season">Season:</label>
        <select name="season-options" id="season">
          <option value ="Summer">Summer</option>
          <option value ="Fall">Fall</option>
          <option value ="Winter">Winter</option>
          </select>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit"onclick="getProductSuggestions()">Submit</button>
      </div>
    </form>
  </div>
</div>

<div class="mainContainer" id="outfits">

    <h2>Recommended Outfits</h2>
    
    <div class="list">
      <div class="listContainer">
        Outfit 1
        <br />
        <br />
        {{#if products.[0]}}
        {{ products.[0].name }}
        {{else}}
        No suggestion for Outfit 1
        {{/if}}
      </div>
    
      <div class="listContainer">
        Outfit 2
        <br />
        <br />
        {{#if products.[1]}}
        {{ products.[1].name }}
        {{else}}
        No suggestion for Outfit 2
        {{/if}}
      </div>
    
      <div class="listContainer">
        Outfit 3
        <br />
        {{#if products.[2]}}
        {{ products.[2].name }}
        <br />
        Price: {{ products.[2].price }}
        {{else}}
        No suggestion for Outfit 3
        {{/if}}
      </div>
      
  </div>


  </div>
</div>
<br />

<script src="./js/profile.js"></script>
